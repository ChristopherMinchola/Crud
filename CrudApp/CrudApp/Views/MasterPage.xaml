<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudApp.Views.MasterPage">
             
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="MenuListView" ItemSelected="OnMenuItemSelected">
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Add Company</x:String>
                        <x:String>Delete Company</x:String>
                        <x:String>Edit Company</x:String>
                        <x:String>Get All Companies</x:String>
                    </x:Array>
                </ListView.ItemsSource>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>